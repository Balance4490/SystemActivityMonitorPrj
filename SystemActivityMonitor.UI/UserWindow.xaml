<Window x:Class="SystemActivityMonitor.UI.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет користувача" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="txtUserWelcome" Text="Вітаємо!" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Це обмежений режим доступу." Foreground="Gray" Margin="0,10,0,20" HorizontalAlignment="Center"/>
            
            <Border Background="#f0f0f0" Padding="15" CornerRadius="5">
                <TextBlock Text="Тут буде відображатися статистика ТІЛЬКИ для вас." TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
            </Border>
            
            <Button Content="Вийти" Width="100" Height="30" Margin="0,20,0,0" Click="BtnLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>