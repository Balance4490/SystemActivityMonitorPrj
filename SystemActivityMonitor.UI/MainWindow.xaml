<Window x:Class="SystemActivityMonitor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Activity Monitor - Головна"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="txtWelcome" Text="Вітаємо!" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="txtRole" Text="Роль: ..." FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
        </StackPanel>

        <ListBox x:Name="lstLogs" Grid.Row="1" BorderBrush="Gray" BorderThickness="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Очистити базу (Command)" Width="160" Height="30" Margin="0,0,10,0"
                    Click="BtnClear_Click" Background="#D8000C" Foreground="White" FontWeight="Bold"/>

            <Button Content="Згенерувати (Command)" Width="160" Height="30" Margin="0,0,10,0"
                    Click="BtnGenerate_Click"/>

            <Button Content="Показати логи (Iterator)" Width="160" Height="30"
                    Click="BtnLoadIterator_Click" Background="#007ACC" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>