<Window x:Class="SystemActivityMonitor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Activity Monitor - Головна"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Total CPU:" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock x:Name="lblTotalCpu" Text="0%" Foreground="Blue" Width="60"/>

                <TextBlock Text="Total RAM:" FontWeight="Bold" Margin="20,0,5,0"/>
                <TextBlock x:Name="lblTotalRam" Text="0 MB" Foreground="Green" Width="80"/>

                <TextBlock x:Name="lblStatus" Text="System Idle" FontStyle="Italic" Foreground="Gray" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <ListView x:Name="lstProcesses" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding StatusName}" Width="120"/>
                    <GridViewColumn Header="CPU" DisplayMemberBinding="{Binding CurrentCpu}" Width="80"/>
                    <GridViewColumn Header="RAM" DisplayMemberBinding="{Binding CurrentRam}" Width="80"/>

                    <GridViewColumn Header="Дії" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌ Kill"
                                        Click="BtnKillRow_Click"
                                        Tag="{Binding Id}"
                                        Background="#FFEFEFEF"
                                        Foreground="Red"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2">
            <StackPanel x:Name="UserPanel" Orientation="Vertical" Visibility="Collapsed">
                <TextBlock Text="Панель користувача (Статистика)" HorizontalAlignment="Center" Foreground="Gray" Margin="0,5"/>
                <Button Content="Аналіз ресурсів (Visitor)" Click="BtnRunAnalysis_Click" Background="#5bc0de" Foreground="White" Width="200" Margin="5"/>
            </StackPanel>

            <StackPanel x:Name="AdminPanel" Orientation="Vertical" Visibility="Collapsed">
                <TextBlock Text="Панель Адміністратора (Діагностика)" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Заморозити процес (Freeze)" Click="BtnFreezeProcess_Click" Background="#f0ad4e" Foreground="White" Width="180" Margin="5"/>
                    <Button Content="Архів логів (History)" Click="BtnShowHistory_Click" Width="150" Margin="5"/>
                    <Button Content="Очистити БД" Click="BtnClearDb_Click" Background="DarkRed" Foreground="White" Width="120" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>