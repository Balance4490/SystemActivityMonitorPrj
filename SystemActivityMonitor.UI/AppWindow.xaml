<Window x:Class="SystemActivityMonitor.UI.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="TopBar" Background="Gray" Height="40" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtAppName" Grid.Column="0" Text="Application" VerticalAlignment="Center" Margin="10,0" Foreground="White" FontWeight="Bold" FontSize="16"/>

                <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="5,5,0,0">
                    <StackPanel x:Name="TabsContainer" Orientation="Horizontal"/>
                </ScrollViewer>

                <Button x:Name="BtnAddTab" Grid.Column="2" Content=" + " Click="BtnAddTab_Click" Visibility="Collapsed"
                        Width="30" Height="30" Margin="5" Background="#FFDDDDDD" FontWeight="Bold" FontSize="16" BorderThickness="0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="White">
            <Image x:Name="AppScreenshot" Visibility="Collapsed" Stretch="UniformToFill" VerticalAlignment="Top"/>

            <Border x:Name="StatsPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#99FFFFFF" Padding="20" CornerRadius="10">
                <StackPanel>
                    <TextBlock x:Name="txtContent" Text="Loading..." FontSize="24" Foreground="Gray" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="txtStats" Text="Tabs: 1 | RAM usage: Normal" FontSize="14" Foreground="Black" Margin="0,10" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>