<Window x:Class="SystemActivityMonitor.UI.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border x:Name="TopBar" Background="Gray" Height="40" Grid.Row="0">
            <TextBlock x:Name="txtAppName" Text="Application" VerticalAlignment="Center" Margin="10,0" Foreground="White" FontWeight="Bold" FontSize="16"/>
        </Border>

        <Grid Grid.Row="1" Background="White">
            <TextBlock x:Name="txtContent" Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Foreground="LightGray"/>
        </Grid>
    </Grid>
</Window>