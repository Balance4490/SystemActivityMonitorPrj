<Window x:Class="SystemActivityMonitor.UI.DesktopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - User: Vlad" Height="768" Width="1024" 
        WindowStartupLocation="CenterScreen" Background="#FF3E6DB6"> <Grid>
        <WrapPanel Margin="20" Orientation="Vertical">
            
            <Button Click="BtnLaunchChrome_Click" Background="Transparent" BorderThickness="0" Margin="10">
                <StackPanel>
                    <Border Width="60" Height="60" Background="White" CornerRadius="30" Margin="0,0,0,5">
                        <TextBlock Text="C" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="Google Chrome" Foreground="White" HorizontalAlignment="Center" Effect="{DynamicResource ShadowEffect}"/>
                </StackPanel>
            </Button>

            <Button Click="BtnLaunchVS_Click" Background="Transparent" BorderThickness="0" Margin="10">
                <StackPanel>
                    <Border Width="60" Height="60" Background="White" CornerRadius="10" Margin="0,0,0,5">
                        <TextBlock Text="VS" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Purple" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="Visual Studio" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="BtnLaunchMonitor_Click" Background="Transparent" BorderThickness="0" Margin="10,50,10,10">
                <StackPanel>
                    <Border Width="60" Height="60" Background="Black" CornerRadius="5" Margin="0,0,0,5">
                        <TextBlock Text="ðŸ“ˆ" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="System Monitor" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

        </WrapPanel>
    </Grid>
</Window>